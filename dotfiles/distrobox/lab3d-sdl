#!/usr/bin/env bash
# distrobox_binary
# name: bazzite-arch-gaming
if [ -z "${CONTAINER_ID}" ]; then
	exec "/run/current-system/sw/bin/distrobox-enter"  -n bazzite-arch-gaming -- gamemoderun obs-gamecapture mangohud  	/usr/sbin/lab3d-sdl  "$@"
elif [ -n "${CONTAINER_ID}" ] && [ "${CONTAINER_ID}" != "bazzite-arch-gaming" ]; then
	exec distrobox-host-exec /home/keenan/.local/share/distrobox/exports/bin/lab3d-sdl  "$@"
else
	exec /usr/bin/lab3d-sdl "$@"
fi

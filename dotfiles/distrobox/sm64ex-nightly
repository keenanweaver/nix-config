#!/usr/bin/env bash
# distrobox_binary
# name: bazzite-arch-gaming
if [ -z "${CONTAINER_ID}" ]; then
	exec "/run/current-system/sw/bin/distrobox-enter"  -n bazzite-arch-gaming -- gamemoderun obs-gamecapture mangohud   /usr/sbin/sm64ex-nightly "$@"
elif [ -n "${CONTAINER_ID}" ] && [ "${CONTAINER_ID}" != "bazzite-arch-gaming" ]; then
	exec distrobox-host-exec /home/keenan/.local/share/distrobox/exports/bin/sm64ex-nightly  "$@"
else
	exec /usr/bin/sm64ex-nightly "$@"
fi

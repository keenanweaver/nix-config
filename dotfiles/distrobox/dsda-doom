#!/usr/bin/env bash
# distrobox_binary
# name: bazzite-arch-gaming
if [ -z "${CONTAINER_ID}" ]; then
	exec "/run/current-system/sw/bin/distrobox-enter"  -n bazzite-arch-gaming -- gamemoderun obs-gamecapture mangohud 	/usr/sbin/dsda-doom  "$@"
elif [ -n "${CONTAINER_ID}" ] && [ "${CONTAINER_ID}" != "bazzite-arch-gaming" ]; then
	exec distrobox-host-exec /home/keenan/.local/share/distrobox/exports/bin/dsda-doom  "$@"
else
	exec /usr/bin/dsda-doom "$@"
fi
